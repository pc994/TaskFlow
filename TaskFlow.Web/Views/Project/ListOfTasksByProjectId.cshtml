@model TaskFlow.Application.ViewModels.Task.ListTaskForListVm
@{
    ViewData["Title"] = "List";

}}

<div style="text-align: center">
    <h4>Warning</h4>
    <h6>The project contains open tasks. If you end the project, all open tasks will be closed! Check out the list below. </h6>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Category
                </th>
                <th>
                    Priority
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model.Tasks)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => task.Id)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => task.Name)*@
                        @Html.ActionLink(task.Name, "TaskPreview", "Task", new { taskId = task.Id })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => task.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => task.Priority.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => task.Status.Name)
                    </td>

                </tr>
            }
        </tbody>
    </table>
