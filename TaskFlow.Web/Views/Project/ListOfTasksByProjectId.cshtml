    <h5>Are you sure you want to finish the project and close all open tasks for that project?</h5>
    <form asp-action="EndProject" asp-route-projectId="@ViewBag.ProjectId" method="post">
        <button type="submit" class="btn btn-danger">End project</button>
        <a asp-action="index" class="btn btn-secondary">Cancel</a>
    </form>
</div>


