@model TaskFlow.Application.ViewModels.Task.TaskDetailsVm

@{
    ViewData["Title"] = "Task preview";
}
<div>
    <dl class="row">
        <h4>@Html.DisplayFor(model => model.Name)</h4>
        <hr />
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status.Name)
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            Priority
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Priority.Name)
        </dd>
        <dt class="col-sm-2">
            Visiblity
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsPublic == true)
            {
                <span>Public</span>
            }
            else
            {
                <span>Private</span>
            }
        </dd>
        <dt class="col-sm-2">
            Project name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="ProjectToEnd" asp-controller="Project" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">Cancel</a>
</div>
